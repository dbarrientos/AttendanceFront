<div class="row">
  <div class="col-md-12">
    <div class="well bs-component">
      <fieldset>
        <legend>Datos Usuario</legend>
        <div class="col-md-12">
          <div class="form-group is-empty col-md-6">        
            <img src="http://i.pravatar.cc/300" class="img-thumbnail img-responsive">
          </div>

          <div class="col-md-6">
            <div class="form-group is-empty col-md-12">        
              <label for="inputNombre" class="col-md-2 control-label">Nombre</label>
              <div class="col-md-10">
                <input type="text" class="form-control" value= "<%= @user['firstname']%>" id="inputNombre" placeholder="Nombre" disabled>
              </div>
            </div>
            <div class="form-group is-empty col-md-12">
              <label for="inputApellido" class="col-md-2 control-label">Apellido</label>
              <div class="col-md-10">
                <input type="text" class="form-control" value= "<%= @user['lastname']%>" id="inputApellido" placeholder="Apellido" disabled>
              </div>
            </div>
            <div class="form-group is-empty col-md-12">
              <label for="inputDni" class="col-md-2 control-label">Dni</label>

              <div class="col-md-10">
                <input type="text" class="form-control" value= "<%= @user['dni']%>" id="inputDni" placeholder="Dni" disabled>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group is-empty col-md-6">
          <label for="inputEmail" class="col-md-2 control-label">Email</label>

          <div class="col-md-10">
            <input type="email" class="form-control" value= "<%= @user['email']%>" id="inputEmail" placeholder="Email" disabled>
          </div>
        </div>
        <div class="form-group is-empty col-md-6">
          <label for="inputRole" class="col-md-2 control-label">Tipo de Usuario</label>

          <div class="col-md-10">
            <input type="text" class="form-control" value= "<%= @user['role']%>" id="inputRole" placeholder="Tipo de Usuario" disabled>
          </div>
        </div>
   
        <div class="form-group is-empty col-md-6">
          <label for="inputDireccion" class="col-md-2 control-label">Dirección</label>
          <div class="col-md-10">
            <input type="text" class="form-control" value= "<%= @user['address']%>" id="inputDireccion" placeholder="Dirección" disabled>
          </div>
        </div>
        <div class="form-group is-empty col-md-6">
          <label for="inputTelefono" class="col-md-2 control-label">Teléfono</label>

          <div class="col-md-10">
            <input type="text" class="form-control" value= "<%= @user['phone']%>" id="inputTelefono" placeholder="Teléfono" disabled>
          </div>
        </div>
        
        
      </fieldset>
      <br><br>
    </div>
  </div>
</div>
