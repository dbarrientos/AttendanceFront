<div class="modal fade" id="modalUserForm" tabindex="-1" role="dialog" aria-labelledby="registrarUsuario">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">Editar Usuario</h4>
      </div>
      <%= form_with url: user_path(params[:id]), local: true, method: :put do |form| %>
        <div class="modal-body">
          <% if session[:ad] %>
            <div class="form-group">
              <i class="material-icons">face</i>
              <label class="control-label" data-error="wrong" data-success="right" for="form1">Tipo de usuario</label>
              <br>
              <%= form.select "user[role]", [["employee", "employee"], ["admin", "admin"]],{ selected: user['role'] }, {class:'form-control validate', id:'form1'} %>
            </div>
          <% end %>

          <div class="form-group">
            <i class="material-icons">email</i>
            <label class="control-label" data-error="wrong" data-success="right" for="email">Email</label>
            <br>
            <%= form.email_field "user[email]", value: user['email'], class:'form-control validate', id:'email', required: true %>
          </div>

          <div class="form-group">
            <i class="material-icons">vpn_key</i>
            <label class="control-label" data-error="wrong" data-success="right" for="password">Nuevo Password (Solo en caso de cambio)</label>
            <br>
            <%= form.text_field "user[password]", class:'form-control validate', id:'password' %>
          </div>

          <div class="form-group">
            <i class="material-icons">account_circle</i>
            <label class="control-label" data-error="wrong" data-success="right" for="firstname">Nombre</label>
            <br>
            <%= form.text_field "user[firstname]", value: user['firstname'], class:'form-control validate', id:'firstname', required: true%>
          </div>

          <div class="form-group">
            <i class="material-icons">account_circle</i>
            <label class="control-label" data-error="wrong" data-success="right" for="lastname">Apellido</label>
            <br>
            <%= form.text_field "user[lastname]", value: user['lastname'], class:'form-control validate', id:'lastname', required: true %>
          </div>

          <div class="form-group">
            <i class="material-icons">people</i>
            <label class="control-label" data-error="wrong" data-success="right" for="dni">DNI</label>
            <br>
            <%= form.text_field "user[dni]", value: user['dni'], class:'form-control validate', id:'dni'%>
          </div>

          <div class="form-group">
            <i class="material-icons">home</i>
            <label class="control-label" data-error="wrong" data-success="right" for="address">Dirección</label>
            <br>
            <%= form.text_field "user[address]", value: user['address'], class:'form-control validate', id:'address'%>
          </div>

          <div class="form-group">
            <i class="material-icons">phone</i>
            <label class="control-label" data-error="wrong" data-success="right" for="phone">Teléfono</label>
            <br>
            <%= form.text_field "user[phone]", value: user['phone'], class:'form-control validate', id:'phone' %>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= form.submit "Enviar", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
