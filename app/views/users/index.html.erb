<h1>
  Listado de Usuarios
  <% if session[:ad] %>
    <%= link_to new_user_path, remote: true, class: "btn pull-right btn-success" do %>
      <i class="material-icons" style="font-size: 40px;">person_add</i>
    <% end %>
  <% end %>
</h1>
<%= form_with url: filter_users_path, method: :post do |form| %>
  <h4>Filtros</h4>
  <div class="row">
    <% if session[:ad] %>
      <div class="form-group is-empty col-md-6">
        <label for="role" class="col-md-2 control-label">Usuario</label>
        <div class="col-md-10">
          <%= form.select :role, [["employee", "employee"], ["admin", "admin"]] ,{prompt: "Tipo de usuario"}, {class:'form-control', id:'role'} %>
        </div>
      </div>
    <% end %>
    <div class="form-group is-empty col-md-6">
      <label for="dni" class="col-md-2 control-label">DNI</label>
      <div class="col-md-10">
        <%= form.text_field :dni, class:'form-control', id:'dni', placeholder:"DNI" %>
      </div>
    </div>

    <div class="form-group is-empty col-md-4">
      <label for="firstname" class="col-md-2 control-label">Nombre</label>
      <div class="col-md-10">
        <%= form.text_field :firstname, class:'form-control', id:'firstname', placeholder:"Nombre" %>
      </div>
    </div>
    <div class="form-group is-empty col-md-4">
      <label for="lastname" class="col-md-2 control-label">Apellido</label>
      <div class="col-md-10">
        <%= form.text_field :lastname, class:'form-control', id:'lastname', placeholder:"Apellido" %>
      </div>
    </div>
    <div class="form-group col-md-4">
      <%= link_to "Limpiar", users_path, class: "btn btn-danger col-md-5 btn-filter" %>
      <%= form.submit "Filtrar", class: "btn btn-primary col-md-5 btn-filter" %>
    </div>
  </div>
<% end %>
<br><br>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Email</th>
        <th>Tipo de Usuario</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="user_table">
      <%= render 'user_list', users: @users %>
    </tbody>
  </table>
</div>
<br>


